{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "noImplicitUseStrict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "dom", "es6" ],
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules", "dist" ]
}


